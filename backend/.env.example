# Backend API Configuration

# API Settings
API_VERSION=v1
API_PREFIX=/api/v1
PROJECT_NAME=MediaCrawler API
PROJECT_DESCRIPTION=Multi-platform content and comment crawler API
VERSION=1.0.0

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=True

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Settings
DATABASE_TYPE=sqlite  # sqlite or mysql
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=media_crawler
SQLITE_DATABASE=media_crawler.db

# Redis Settings (Optional)
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Task Queue Settings
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT=3600

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
